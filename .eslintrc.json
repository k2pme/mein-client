{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "react/react-in-jsx-scope": "off",          // inutile avec Next.js
    "no-console": "warn",                        // avertit sans bloquer
    "no-debugger": "warn",                       // avertit mais ne bloque pas
    "import/no-anonymous-default-export": "off", // utile pour les pages Next.js
    "max-len": ["warn", { "code": 500 }]         // ajuster si besoin, ou désactiver complètement
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
